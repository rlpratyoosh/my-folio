generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  USER
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  avatarUrl String?
  type      UserType @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id           String             @id @default(cuid())
  name         String
  description  String
  detail       String?            @db.Text
  thumbnailUrl String             @db.Text
  gitLink      String             @db.Text
  projectLink  String?            @db.Text
  ytLink       String?            @db.Text
  slug         String             @unique
  techs        ProjectTechStack[]
  tags         ProjectTag[]
  builtAt      String
  order        Int
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
}

enum ProgressType {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model TechStack {
  id        String             @id @default(cuid())
  name      String             @unique
  iconUrl   String             @db.Text
  projects  ProjectTechStack[]
  progress  ProgressType       @default(BEGINNER)
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model ProjectTechStack {
  id          String    @id @default(cuid())
  techStackId String
  tech        TechStack @relation(fields: [techStackId], references: [id], onDelete: Cascade)
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Tag {
  id        String       @id @default(cuid())
  name      String       @unique
  projects  ProjectTag[]
  createdAt DateTime     @default(now()) 
  updatedAt DateTime     @updatedAt
}

model ProjectTag {
  id        String   @id @default(cuid())
  tagId     String
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Skill {
  id        String       @id @default(cuid())
  name      String       @unique
  iconUrl   String
  progress  ProgressType @default(BEGINNER)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Blog {
  id           String         @id @default(cuid())
  title        String
  content      String         @db.Text
  thumbnailUrl String         @db.Text
  slug         String         @unique
  category     BlogCategory[]
  published    Boolean        @default(false)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([published, createdAt])
}

model Category {
  id        String         @id @default(cuid())
  name      String         @unique
  blogs     BlogCategory[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model BlogCategory {
  id         String   @id @default(cuid())
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  blogId     String
  blog       Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Message {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([read, createdAt])
}

model Testimonial {
  id        String   @id @default(cuid())
  author    String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
